{
  "extends": "strongloop",
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "env": {
    "es6": true,
    "jest": true
  },
  "rules": {
    "strict": [2, "never"],
    "comma-dangle": [2, "never"],
    "max-len": [
      2,
      {
        "code": 80,
        "tabWidth": 2,
        "ignoreTemplateLiterals": true
      }
    ],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
